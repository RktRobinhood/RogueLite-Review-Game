{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch with Live Server",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5500",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "runtimeArgs": ["--remote-debugging-port=9222"]
        },
        {
            "name": "Attach to Chrome",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true
        }
    ]
}
